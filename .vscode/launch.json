{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch (clean)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
      "cwd": "${fileDirname}",
      "stopAtEntry": false,
      "externalConsole": true,                 // eigenes Fenster f√ºr dein Programm
      "args": ["&&", "pause", "enter"],
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
      "miDebuggerArgs": "-q",                  // quiet: kein GDB-Banner
      "setupCommands": [
        { "text": "-enable-pretty-printing", "ignoreFailures": true },
        { "text": "set pagination off" }
      ],
      "logging": {                             // Debugger-Spam aus
        "engineLogging": false,
        "trace": false,
        "traceResponse": false,
        "moduleLoad": false,
        "programOutput": true
    },
      "preLaunchTask": "C/C++: gcc.exe build active file"
    },
  ],
}
